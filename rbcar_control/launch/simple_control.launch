<?xml version="1.0"?>
<launch>
  <arg name="remap_mux_output_topic" default="robotnik_base_controller/cmd_vel"/>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find rbcar_control)/config/rbcar_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="
					  robotnik_base_controller
            joint_read_state_controller
            joint_read_command_controller
            
            "/>


  <node pkg="twist_mux" type="twist_mux" name="twist_mux">
    <rosparam command="load" file="$(find rbcar_control)/config/twist_mux.yaml" />
    <remap from="cmd_vel_out" to="$(arg remap_mux_output_topic)" />
  </node>

</launch>
